<h4><%= @list.name %></h4>

<p><strong>Movies</strong></p>
<table class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= bookmark.movie.title %></h5>
    <p class="card-text"><%= bookmark.comment %></p>
  </div>
</div>
    <tr class="list-group-item"><%= bookmark.movie.title %> Comments: <%= bookmark.comment %></tr>
  <% end %>
</table>
<br>

<%= link_to "Bookmark a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to Lists", lists_path, class: "btn btn-primary" %>


